# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Copy app files
COPY . .

EXPOSE 3000

# Make sure Next.js binds to 0.0.0.0 not just localhost
ENV HOSTNAME=0.0.0.0

CMD ["npm", "run", "dev"]
